<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textView"
        android:layout_width="201dp"
        android:layout_height="48dp"
        android:text="> 김개똥"
        android:textSize="34dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="45dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="169dp"
        android:layout_height="408dp"
        app:srcCompat="@drawable/forth_1monthpot"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="250dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="176dp"
        android:layout_height="36dp"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="93dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="103dp"
        android:layout_height="35dp"
        android:text="그의 대한 모든 것"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="319dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="68dp"
        android:layout_height="36dp"
        android:text="생일"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="192dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="246dp"
        tools:ignore="MissingConstraints"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="189dp"
        android:layout_height="327dp"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="347dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="mabbas007.myapplication.MainActivity">

            <mabbas007.tagsedittext.TagsEditText
                android:id="@+id/tagsEditText"
                android:layout_width="165dp"
                android:layout_height="34dp"
                TagsEditText:allowSpaceInTag="true"
                TagsEditText:tagsBackground="@drawable/square"
                TagsEditText:tagsCloseImageLeft="@drawable/dot"
                TagsEditText:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
                TagsEditText:tagsCloseImageRight="@drawable/tag_close"
                TagsEditText:tagsTextColor="@color/blackOlive"
                TagsEditText:tagsTextSize="@dimen/defaultTagsTextSize" />

            <LinearLayout
                android:layout_width="172dp"
                android:layout_height="236dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnChangeTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Tags to 1 2 3" />

                <Button
                    android:id="@+id/btnChangeBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Background" />

                <Button
                    android:id="@+id/btnChangeColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Text Color" />

                <Button
                    android:id="@+id/btnChangeSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Text Size" />

                <Button
                    android:id="@+id/btnChangeDrawableLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Drawable Left" />

                <Button
                    android:id="@+id/btnChangeDrawableRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Drawable Right" />

                <Button
                    android:id="@+id/btnChangeClosePadding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Close Padding" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="212dp"
        android:background="@color/teal_200"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="680dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="387dp"
            android:layout_height="84dp"
            android:text="메모" />
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>