<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#615656"
        android:layout_margin="10dp"
        app:cardCornerRadius="22dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FCF7FF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/flowerpotIv"
                    android:layout_width="190dp"
                    android:layout_height="312dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/nameTv"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="15dp"
                    android:text="The title"
                    android:textColor="#000"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/phoneTv"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:minLines="3"
                    android:textSize="20sp"
                    android:text="phoneNumber"
                    android:textColor="#000" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:max="100"
                    android:layout_marginTop="20dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:progressDrawable="@drawable/progressbar_custom"
                    android:progress="25"
                    android:scaleY="1.3" />

                <TextView
                    android:id="@+id/birthdayTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:background="@drawable/shape_rect"
                    android:drawableStart="@drawable/ic_baseline_cake_24"
                    android:drawableLeft="@drawable/ic_baseline_cake_24"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="dd/mm/yyyy"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/waterpotBtn"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/purple_200"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="물주기" />

            </LinearLayout>
    </androidx.cardview.widget.CardView>


</layout>